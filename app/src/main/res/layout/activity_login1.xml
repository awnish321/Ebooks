    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/conss11"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/leniar1"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">

    <AutoCompleteTextView
        android:id="@+id/serchviews1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="5dp"
        android:layout_weight=".3"
        android:hint="Search..."
        android:importantForAutofill="no"
        android:textSize="12dp"
        android:background="@drawable/editbox"
        app:layout_constraintLeft_toRightOf="@+id/tttt"
        app:layout_constraintTop_toBottomOf="@+id/leniar1"
        tools:ignore="MissingConstraints"/>


    <ImageButton
        android:id="@+id/searchbtn1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.7"
        android:background="@drawable/btnshape"
        android:src="@drawable/search"
        app:layout_constraintLeft_toRightOf="@+id/serchviews1"
        app:layout_constraintTop_toBottomOf="@+id/constraint1"
        tools:ignore="MissingConstraints"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="132dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/leniar5"
        app:layout_constraintTop_toBottomOf="@+id/serchviews1"
        tools:ignore="MissingConstraints,WebViewLayout">

        <WebView
            android:id="@+id/webviews_log"
            android:paddingTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/activity_internet_off"
        android:visibility="gone"/>
    <include layout="@layout/logindesign"
        android:visibility="gone"/>
    <include layout="@layout/activity_request_otp"
        android:visibility="gone"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navfirst_view1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        app:labelVisibilityMode="labeled"
        app:itemTextAppearance="@style/TextStyleBNV"
        android:layout_height="wrap_content"
        app:itemBackground="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/login_nav_menu"/>

