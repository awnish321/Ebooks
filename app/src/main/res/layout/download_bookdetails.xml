    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="23dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_height="350dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/img_Book_Image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="#E11B09"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal|bold"
                android:layout_below="@+id/img_Book_Image"
                android:layout_marginTop="12dp"
                android:id="@+id/text_book_title"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="#FA4700"
                android:layout_below="@+id/text_book_title"
                android:layout_marginTop="10dp"
                android:id="@+id/text_book_type"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
